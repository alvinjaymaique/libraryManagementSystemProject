<Window x:Class="LMS.HelpPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS"
        mc:Ignorable="d"
        Title="HelpPage" Height="500" Width="400" Background="#fffce6" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Image Source="/9.png" 
       Width="95" 
       Height="80" 
       HorizontalAlignment="Left" 
       VerticalAlignment="Top" Margin="305,10,0,0" Grid.RowSpan="2"  IsHitTestVisible="False" />

        <Image Source="11.png" 
      Width="197" 
        Height="152" 
       HorizontalAlignment="Left" 
       VerticalAlignment="Bottom" Margin="237,0,0,-6"  IsHitTestVisible="False" />

        <Image Source="12.png" 
       Width="197" 
       Height="152" 
       HorizontalAlignment="Left" 
       VerticalAlignment="Bottom" Margin="-53,0,0,323"  IsHitTestVisible="False" />

        <StackPanel Margin="30,30,30,20">


            <!-- Main Header -->
            <Label FontSize="20" FontWeight="Bold" Content="Help Page" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0"/>

            <!-- Introduction -->
            <Label Content="Welcome to the Library Management System (LMS)"/>

            <!-- Basic Overview -->
            <Label>
                <TextBlock Width="330">
                    This application is a Library Management System designed to manage library resources efficiently.
                    It allows users to perform various functions such as borrowing books, returning books, and viewing available resources.
                </TextBlock>
            </Label>

            <!-- User Login Information -->
            <Label>
                <TextBlock>
                    To access the application, there are two (2) types of users that need to log in:
                </TextBlock>
            </Label>

            <!-- User Types -->
            <StackPanel Margin="10,0,0,0">
                <Label FontWeight="Bold" Content="1. Administrator"/>

                <Label>
                    <TextBlock >
                        The Administrator has full access to the system and can manage books, users, and system settings." To use admin use these credentials "Name: admin, Password: admin"
                    </TextBlock>
                </Label>

                <Label FontWeight="Bold" Content="2. Regular User"/>
                <Label>
                    <TextBlock>
                        Regular users can borrow and return books, view the library catalog, and check their borrowing history.
                    </TextBlock>
                </Label>

            </StackPanel>

            <!-- Login Instructions -->
            <Label>
                <TextBlock>
                    To log in, simply select the user type (Administrator or Regular User) on the login page and enter your credentials.
                </TextBlock>
            </Label>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Button x:Name="PreviousButton1"  Content="Previous" Margin="0,0,0,0"  Height="20" Width="60" Click="PreviousButton1_Click"/>
                <Button x:Name="NextButton" Content="Next" Margin="5" Height="20" Width="60" Click="NextButton_Click"/>
            </StackPanel>


        </StackPanel>
    </Grid>

</Window>
